{
  "name": "task-management-system",
  "version": "1.0.0",
  "description": "A full-stack task management system built with NestJS and Next.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "cd server && npm run start:dev",
    "dev:web": "cd web && npm run dev",
    "build": "npm run build:server && npm run build:web",
    "build:server": "cd server && npm run build",
    "build:web": "cd web && npm run build",
    "start": "concurrently \"npm run start:server\" \"npm run start:web\"",
    "start:server": "cd server && npm run start:prod",
    "start:web": "cd web && npm start",
    "install:all": "npm install && cd server && npm install && cd ../web && npm install",
    "setup": "./setup.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "task-management",
    "nestjs",
    "nextjs",
    "typescript",
    "mongodb",
    "jwt",
    "tailwindcss"
  ],
  "author": "Development Team",
  "license": "MIT"
}
